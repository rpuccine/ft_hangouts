<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="0dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp" >

    <ImageView
        android:id="@+id/contactRowFaceIcon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/ic_face" >
    </ImageView>

    <TextView
        android:id="@+id/contactRowFirstName"
        android:textSize="30sp"
        android:textColor="@color/colorNameContactList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/contactRowFaceIcon"/>

    <TextView
        android:id="@+id/contactRowName"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/contactRowFirstName"
        android:layout_alignStart="@id/contactRowFirstName"/>

    <TextView
        android:id="@+id/contactRowTel"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/contactRowName"
        android:layout_alignStart="@id/contactRowName"/>

</RelativeLayout>